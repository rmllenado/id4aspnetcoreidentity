@model TwoFactorViewModel

<div class="twofactor-page">
    <div class="page-header">
        <h1>2SV/2FA</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please enter your code below</h3>
                </div>
                <div class="panel-body">
                    <form asp-action="TwoFactor">
                        <input asp-for="ReturnUrl" type="hidden" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Token"></label>
                                <input class="form-control" placeholder="Token" asp-for="Token" autofocus autocomplete="off"/>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>